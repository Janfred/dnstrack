= form_for @record, url: zone_records_path(@record.zone) do |f|
  - if @record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record.errors.count, "error")} prohibited this record from being saved:"
      %ul
        - @record.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
