- model_class = Record
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:zone_id) + ':'
  %br
  = @record.zone_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @record.name
%p
  %strong= model_class.human_attribute_name(:ttl) + ':'
  %br
  = @record.ttl
%p
  %strong= model_class.human_attribute_name(:rrtype) + ':'
  %br
  = @record.rrtype
%p
  %strong= model_class.human_attribute_name(:priority) + ':'
  %br
  = @record.priority
%p
  %strong= model_class.human_attribute_name(:target) + ':'
  %br
  = @record.target


= link_to t('.back', :default => t("helpers.links.back")), zone_records_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_zone_record_path(@record), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), zone_record_path(@record), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
