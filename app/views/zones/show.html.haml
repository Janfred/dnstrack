- model_class = Zone
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:fqdn) + ':'
  %br
  = @zone.fqdn
%p
  %strong= model_class.human_attribute_name(:pseudo_zone) + ':'
  %br
  = @zone.pseudo_zone
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @zone.description
%p
  %strong= model_class.human_attribute_name(:parent_zone_id) + ':'
  %br
  = @zone.parent_zone_id


= link_to t('.back', :default => t("helpers.links.back")), zones_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_zone_path(@zone), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), zone_path(@zone), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
